<html>

	<%= @page_title= "Subject List" %>

	<%= link_to("<< Add New Subject", {:action => 'new'}, :class => 'action new')%>
	<div class=”subject list”>
		<h2>Subjects</h2>
		<div><%= pluralize(@subjects.size, 'subject') %></div>
		<table class=”listing” summary=”Subject list”>
		<tr class=”header”>	
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
		<tr class="<%= cycle('odd','even')%>">
			<td><%= subject.position%></td>
			<td><%= subject.name  %></td>
			<td class=”center”><%= status_tag(subject.visible)%></td>
			<td class=”center”><%= subject.pages.size%></td>
			<td class="action"><%= link_to("Show", {:action=> 'show', :id => subject.id}, :class => 'action show')%></td>
			<td class="action"><%= link_to("Edit", {:action=> 'edit', :id => subject.id}, :class => 'action edit')%></td>
			<td class="action"><%= link_to("Delete", {:action=> 'delete', :id => subject.id}, :class => 'action delete')%></td>
			
		</tr>
		<% end %>
		</table>
	</div>
			
</html>